{
  "manifest_version": 2,
  "name": "Politics Filter",
  "version": "1.0",
  "description": "Replaces text related to American politics.",
  "permissions": ["activeTab", "tabs", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.bundle.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
