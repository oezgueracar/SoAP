{
  "manifest_version": 2,
  "name": "Sick of American Politics (SoAP)",
  "version": "1.0",
  "description": "Replaces text related to American politics.",
  "permissions": ["activeTab", "webRequest", "webRequestBlocking"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}